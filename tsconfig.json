{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    }
  },
  "include": [
    "src/**/*",
    "netlify/functions/**/*",
    "validateE2E.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
